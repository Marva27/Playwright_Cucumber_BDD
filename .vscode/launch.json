{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Cucumber Feature",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cucumber-js",
      "args": ["${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["-r", "ts-node/register"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "DEBUG": "pw:api"
        // "PWDEBUG": "1"
      }
    }
  ]
}
